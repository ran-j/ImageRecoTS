    <div class="container" style="margin-top:15px"> 
        <div class="d-flex justify-content-center">
        <h2>TensorFlow JS image classification</h2>       
    </div>

    <br>
    <br>

    <form>
        <div class="form-group">
            <label for="exampleFormControlFile1">Select image for predict</label>
            <input type="file" class="form-control-file" id="image-selector">
        </div>
        <div class="d-flex justify-content-end"><img src="" id="selected-image" style="display: none;" height="100" width="100"></div>
    </form>

    <div class="d-flex justify-content-center">
        <button type="button" id="predict-button" class="btn btn-primary">Predict</button>
    </div>

    <br>
    <br>
     
    <ul class="list-group" id='prediction-list' style="display: none;">
        <li class="list-group-item list-group-item-success">Success item</li>
        <li class="list-group-item list-group-item-secondary">Secondary item</li>
        <li class="list-group-item list-group-item-light">Light item</li>
    </ul>
  
</div>


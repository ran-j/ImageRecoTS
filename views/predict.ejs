  <style>
      .textlogo {
        color: white !important;
        display: flex;
        position: relative;
        flex-direction: column;
        justify-content: space-between;
        box-sizing: border-box; 
        /* /* width: 100%; */
    }

    .nvB {
        background-color: #ef6c00 !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    }
  </style>
